public class Main {
    public static void main(String[] args) {

        int numeroIf = -5;
        if (numeroIf < 0) {
            System.out.println("es Negativo");
        } else if (numeroIf == 0) {
            System.out.println("es Zero");
        } else {
            System.out.println("es Positivo");
        }

        int numeroWhile = 0;
        while (numeroWhile < 3) {
            numeroWhile++;
            System.out.println(numeroWhile);
            }

        int numeroDoWhile = 3;
        do {
            System.out.println(numeroDoWhile);
           numeroDoWhile++;
        } while (numeroDoWhile < 3);

        for (int numeroFor = 0; numeroFor <=3; numeroFor = numeroFor +1) {
            System.out.println(numeroFor);}

        var estacion = "calor"; // para el ejemplo vamos a considerar que las estaciones solo sera valida si el string comienza con mayuscula...
        switch (estacion) {
            case "Verano":
                System.out.println(estacion);
                break;
            case "OtoÃ±o":
                System.out.println((estacion));
                break;
            case "Invierno":
                System.out.println((estacion));
                break;
            case "Primavera":
                System.out.println((estacion));
                break;
            default:
                System.out.println("el string no es una estacion ");
        }
    }
}
